<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8">
    <title>Вхід</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light d-flex align-items-center justify-content-center" style="height: 100vh;">
    
    <div class="card p-4 shadow" style="width: 350px;">
        <h3 class="text-center mb-3">Вхід в CIST</h3>
        
        <% if (error) { %>
            <div class="alert alert-danger p-2"><%= error %></div>
        <% } %>

        <form action="/auth/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label>Логін <i>(E-mail)</i></label>
                <input type="email" name="username" class="form-control" placeholder="example@nure.ua" required>
            </div>
            <div class="mb-3">
                <label>Пароль</label>
                <input type="password" name="password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Увійти</button>
        </form>
        <div class="text-center mt-3">
            <a href="/">На головну</a>
        </div>
    </div>
    <script>
        (function () {
        'use strict'
        
        var forms = document.querySelectorAll('.needs-validation')
        
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
                }
        
                form.classList.add('was-validated')
            }, false)
            })
        })()
    </script>
</body>
</html>