                            <select class="form-select" name="subject_id" required>
                                <% subjects.forEach(s => { %>
                                    <option value="<%= s.id %>"><%= s.short_name %></option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">–¢–∏–ø –∑–∞–Ω—è—Ç—Ç—è</label>
                            <select class="form-select" name="lesson_type_id" required>
                                <% lessonTypes.forEach(lt => { %>
                                    <option value="<%= lt.id %>"><%= lt.short_name %></option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">–í–∏–∫–ª–∞–¥–∞—á</label>
                            <select class="form-select" name="teacher_id" required>
                                <% teachers.forEach(t => { %>
                                    <option value="<%= t.id %>"><%= t.full_name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">–ê—É–¥–∏—Ç–æ—Ä—ñ—è</label>
                            
                            <div class="d-flex mb-2">
                                <button class="btn btn-outline-primary w-100" type="button" onclick="checkRoomAvailability()">
                                    üîÑ –ü–µ—Ä–µ–≤—ñ—Ä–∏—Ç–∏ –¥–æ—Å—Ç—É–ø–Ω—ñ—Å—Ç—å
                                </button>
                            </div>

                            <select class="form-select" name="classroom_id" id="classroomSelect" required>
                                <% classrooms.forEach(c => { %>
                                    <option value="<%= c.id %>" data-cap="<%= c.capacity %>">
                                        <%= c.room_number %> ‚Äî <%= c.capacity == -1 ? '‚àû' : c.capacity %> –º—ñ—Å—Ü—å
                                    </option>
                                <% }) %>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">–í—ñ–¥–º—ñ–Ω–∞</button>
                    <button type="button" class="btn btn-primary" onclick="submitAddLesson()">–ó–±–µ—Ä–µ–≥—Ç–∏</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/scrollX.js"></script>
