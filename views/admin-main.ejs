                </div>

                <button type="submit" class="btn btn-primary w-100">–ü–æ–∫–∞–∑–∞—Ç–∏</button>
            </form>
        </div>

        <div class="main-content">
            <div class="table-responsive h-100" id="scroll-x">
                <table class="table table-bordered text-center align-middle schedule-table">
                    
                    <thead class="bg-light sticky-top">
                        <tr>
                            <th style="width: 80px;">–ß–∞—Å</th>
                            <% weekDates.forEach(date => { %>
                                <th><%= date %></th>
                            <% }) %>
                        </tr>
                    </thead>

                    <tbody>
                        <% timeSlots.forEach(slot => { %>
                            <tr>
                                <td class="time-col text-muted">
                                    <small><%= slot.pair_number %> –ø–∞—Ä–∞</small><br>
                                    <strong><%= slot.start_time.slice(0,5) %></strong><br>
                                    <small><%= slot.end_time.slice(0,5) %></small>
                                </td>

                                <% weekDates.forEach(date => { %>
                                    <% 
                                        const lesson = scheduleMap[date] ? scheduleMap[date][slot.id] : null; 
                                    %>
                                    
                                    <td class="schedule-cell <%= lesson ? 'has-lesson' : '' %>">
                                        <% if (lesson) { %>
                                            <div class="lesson-card p-2 text-start
                                              <%= lesson.type == '–õ–∫'? 'card-lecture' : '' %>
                                              <%= lesson.type == '–ü–∑'? 'card-practical' : '' %>
                                              <%= lesson.type == '–õ–±'? 'card-laboratory' : '' %>
